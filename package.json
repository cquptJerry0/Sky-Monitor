{
    "name": "sky-monitor",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "packageManager": "pnpm@9.11.0",
    "scripts": {
        "build:watch": "turbo build:watch",
        "build": "turbo build",
        "clean": "run-s clean:build clean:caches",
        "clean:build": "pnpm --filter @sky-monitor/* clean",
        "clean:caches": "rimraf .turbo",
        "clean:all": "run-s clean:build clean:caches",
        "dev": "run-p dev:server:dsn dev:server:monitor dev:client:monitor",
        "dev:server:dsn": "pnpm --filter @sky-monitor/monitor-dsn-server start:dev",
        "dev:server:monitor": "pnpm --filter @sky-monitor/monitor-server start:dev",
        "dev:client:monitor": "pnpm --filter @sky-monitor/monitor-client start:dev",
        "dev:demo:shop": "pnpm --filter @sky-monitor/shop-demo start:dev",
        "docker:start": "docker compose -f .devcontainer/docker-compose.yml up -d",
        "docker:stop": "docker compose -f .devcontainer/docker-compose.yml down",
        "docker:deploy": "docker compose -f .devcontainer/docker-compose.deploy.yml up -d",
        "docker:build-deploy": "pnpm build && pnpm docker:deploy",
        "docker:deploy:stop": "docker compose -f .devcontainer/docker-compose.deploy.yml down",
        "start": "run-s docker:start dev",
        "test-api": "bash scripts/test-backend-api.sh",
        "lint": "eslint",
        "lint:style": "stylelint",
        "lint:staged": "lint-staged",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{css,less}": [
            "prettier --cache --write"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --cache --parser=typescript --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "9.12.0",
        "@types/node": "22.7.5",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "0.4.12",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "fast-glob": "3.3.2",
        "globals": "15.10.0",
        "husky": "9.1.6",
        "lint-staged": "15.2.10",
        "npm-run-all2": "6.2.3",
        "prettier": "3.3.3",
        "rimraf": "^6.0.1",
        "tsup": "8.3.0",
        "turbo": "2.1.3",
        "typescript": "5.5.3",
        "typescript-eslint": "8.8.1"
    }
}
