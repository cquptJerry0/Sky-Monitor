{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build:watch": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**", "dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    },
    "ui": "tui",
    "cacheDir": ".turbo/cache"
}
