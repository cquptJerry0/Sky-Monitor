# ==================== 数据库配置 ====================
# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=monitor_user
DATABASE_PASSWORD=monitor_password
DATABASE_NAME=monitor_db

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=monitor

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka (可选)
KAFKA_BROKERS=localhost:9092

# ==================== 安全配置 ====================
# JWT 密钥 - 开发环境使用的示例密钥（生产环境必须更换！）
JWT_SECRET=a7f3e8b2d9c1f6a4e7b3d8c2a9f5e1b7c3d9a2f8e4b6c1d7a3e9f2b8c4d1a6e3f9
JWT_REFRESH_SECRET=b8d4f9a2e6c3b7d1a5e9f3b8c2d6a1e7f4b9d3a8e2c6f1b5d9a4e8c3b7f2d6a1e9

# JWT 过期时间
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ==================== 应用配置 ====================
# 环境：development | production
NODE_ENV=development

# 服务端口
PORT=8081

# CORS 配置
CORS_ORIGIN=http://localhost:5173

# ==================== 安全选项 ====================
# 是否强制 HTTPS（生产环境建议开启）
FORCE_HTTPS=false

# Cookie 安全选项
COOKIE_SECURE=false  # 开发环境使用 false，生产环境必须设为 true
COOKIE_SAME_SITE=strict  # strict | lax | none
COOKIE_HTTP_ONLY=true

# ==================== 监控配置 ====================
# 错误采样率 (0.0 - 1.0)
ERROR_SAMPLE_RATE=1.0

# 性能采样率 (0.0 - 1.0)  
PERFORMANCE_SAMPLE_RATE=0.3

# ==================== 邮件配置（可选）====================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@skymonitor.com

# ==================== 日志配置 ====================
LOG_LEVEL=debug  # error | warn | info | debug
