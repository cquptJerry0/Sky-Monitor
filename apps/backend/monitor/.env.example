# ==================== 数据库配置 ====================
# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=monitor_user
DATABASE_PASSWORD=monitor_password
DATABASE_NAME=monitor_db

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=monitor

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka (可选)
KAFKA_BROKERS=localhost:9092

# ==================== 安全配置 ====================
# JWT 密钥（生产环境必须使用强密钥！）
# 生成方式: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_at_least_32_chars_long_for_security
JWT_REFRESH_SECRET=your_refresh_secret_key_at_least_32_chars_long_for_security

# JWT 过期时间
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ==================== 应用配置 ====================
# 环境：development | production
NODE_ENV=development

# 服务端口
PORT=8081

# CORS 配置
CORS_ORIGIN=http://localhost:5173

# ==================== 安全选项 ====================
# 是否强制 HTTPS（生产环境建议开启）
FORCE_HTTPS=false

# Cookie 安全选项
COOKIE_SECURE=false  # 生产环境设为 true
COOKIE_SAME_SITE=strict  # strict | lax | none
COOKIE_HTTP_ONLY=true

# ==================== 监控配置 ====================
# 错误采样率 (0.0 - 1.0)
ERROR_SAMPLE_RATE=1.0

# 性能采样率 (0.0 - 1.0)  
PERFORMANCE_SAMPLE_RATE=0.3

# ==================== 邮件配置（可选）====================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@skymonitor.com

# ==================== 日志配置 ====================
LOG_LEVEL=debug  # error | warn | info | debug
