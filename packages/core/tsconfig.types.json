{
    "extends": "./tsconfig.json",
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts", "src/**/__tests__/**", "node_modules", "build"],
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "build/types",
        "skipLibCheck": true,
        "noEmit": false,
        "emitDecoratorMetadata": false,
        "lib": ["ES2018", "DOM"]
    }
}
